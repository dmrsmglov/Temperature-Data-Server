<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="UTF-8">
    <title>New temperature data page</title>
    <link href="/css/style.css" rel="stylesheet" type="text/css">
</head>
<body>
<div>
    Post new temperature data
</div>
<div>
    {{#validation error}}
    {{validation error}}
    {{/validation error}}
</div>
<div>
    <form action="/temperatures/newTemperatureData" method="post">
        <div><label> Temperature, D: <input type="number" step = "any" name="temperature" placeholder="-25"/> </label></div>
        <div class = "list"><label> Latitude: <input type="number" step = "any" name="latitude" placeholder = "-24.0"/> </label></div>
        <div class = "list"><label> Longitude: <input type="number" step = "any" name="longitude" placeholder = "-24.0"/> </label></div>
        <div class = "list"><input type="submit" value="Post"></div>
    </form>
</div>
<div>
    <a href="/temperatures">Go back</a>
</div>
</body>
</html>