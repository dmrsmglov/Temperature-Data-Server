<html xmlns="http://www.w3.org/1999/xhtml">
<body>
<div>
    <form action="/logout" method="post">
        <div><input type="submit" value="Sign Out"/></div>
        <div><input type="hidden" name="_csrf" value="{{_csrf.token}}"></div>
    </form>
</div>
<div>
    <a href="/temperatures/newTemperatureData">Post new Temperature Data</a>
</div>
<div>
    {{#validation error}}
        {{validation error}}
    {{/validation error}}
</div>

<div>
    <form action="/temperatures/filter" method="post">
        <div><label> Your Location: <input type="text" name="coordinates"/> </label></div>
        <div><input type="submit" value="Filter"/></div>
        <div><input type="hidden" name="_csrf" value="{{_csrf.token}}"></div>
    </form>
</div>
<div>
    Список температур:
</div>
    {{#messages}}
    <div>
        <span>Temperature: {{temperature}}</span>
    </div>
    <div>
        <span>Coordinates: {{coordinates}}</span>
    </div>
    {{/messages}}
</body>
</html>